<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            id="edu.kit.textannotation.annotationplugin.project"
            name="edu.kit.textannotation.annotationplugin.project"
            base-type="org.eclipse.core.runtime.text"
            file-extensions="project">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editorContentTypeBinding
            contentTypeId="edu.kit.textannotation.annotationplugin.project"
            editorId="org.eclipse.ui.genericeditor.GenericEditor">
      </editorContentTypeBinding>
   </extension>
   <extension
         point="org.eclipse.ui.genericeditor.presentationReconcilers">
      <presentationReconciler
            class="edu.kit.textannotation.annotationplugin.ProjectPresentationReconciler"
            contentType="edu.kit.textannotation.annotationplugin.project">
      </presentationReconciler>
   </extension>
   <extension
         point="org.eclipse.ui.genericeditor.hoverProviders">
      <hoverProvider
            class="edu.kit.textannotation.annotationplugin.ProjectHoverProvider"
            contentType="edu.kit.textannotation.annotationplugin.project">
      </hoverProvider>
   </extension>
   <extension
         point="org.eclipse.ui.genericeditor.contentAssistProcessors">
      <contentAssistProcessor
            class="edu.kit.textannotation.annotationplugin.ProjectContentAssistProcessor"
            contentType="edu.kit.textannotation.annotationplugin.project">
      </contentAssistProcessor>
   </extension>
   <extension
         point="org.eclipse.ui.genericeditor.autoEditStrategies">
      <autoEditStrategy
            class="edu.kit.textannotation.annotationplugin.ProjectAutoEditStrategy"
            contentType="edu.kit.textannotation.annotationplugin.project">
      </autoEditStrategy>
   </extension>
   <extension
         point="org.eclipse.ui.genericeditor.reconcilers">
      <reconciler
            class="edu.kit.textannotation.annotationplugin.ProjectReconciler"
            contentType="edu.kit.textannotation.annotationplugin.project">
      </reconciler>
   </extension>
   <extension
         point="org.eclipse.core.filebuffers.documentSetup">
      <participant
            class="edu.kit.textannotation.annotationplugin.ValidatorDocumentSetupParticipant"
            contentTypeId="edu.kit.textannotation.annotationplugin.project"
            extensions="project">
      </participant>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="edu.kit.textannotation.annotationplugin.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="edu.kit.textannotation.annotationplugin.commands.category"
            name="Sample Command"
            id="edu.kit.textannotation.annotationplugin.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="edu.kit.textannotation.annotationplugin.handlers.SampleHandler"
            commandId="edu.kit.textannotation.annotationplugin.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="edu.kit.textannotation.annotationplugin.commands.sampleCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="edu.kit.textannotation.annotationplugin.menus.sampleMenu"
               label="Sample Menu"
               mnemonic="M">
            <command
                  commandId="edu.kit.textannotation.annotationplugin.commands.sampleCommand"
                  id="edu.kit.textannotation.annotationplugin.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="edu.kit.textannotation.annotationplugin.toolbars.sampleToolbar">
            <command
                  id="edu.kit.textannotation.annotationplugin.toolbars.sampleCommand"
                  commandId="edu.kit.textannotation.annotationplugin.commands.sampleCommand"
                  icon="icons/sample.png"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="Sample Wizards"
            id="edu.kit.textannotation.annotationplugin">
      </category>
      <wizard
            id="edu.kit.textannotation.annotationplugin.wizards.SampleNewWizard"
            name="Multi-page Editor file"
            icon="icons/sample.png"
            class="edu.kit.textannotation.annotationplugin.wizards.SampleNewWizard"
            category="edu.kit.textannotation.annotationplugin">
      </wizard>
   </extension>

</plugin>
